<p id="notice"><%= notice %></p>


  <div>
  <h3>Info</h3>
  <p><b>Name:</b> <%= @payslip.user.name %></p>
  <p><b>Pay start:</b> <%= @payslip.start.strftime('%c')%></p>
  <p><b>Pay end:</b> <%= @payslip.finish ? @payslip.finish.strftime('%c') : "not finalised" %></p>
  <p><b>Hours:</b> <%= time_spent_hours @payslip.seconds %></p>
  <p><b>Finalised:</b> <%= @payslip.finalized %></p>
  <p><b>Paid:</b> <%= @payslip.paid %></p>
  
  </div>


<div id="bottomMenu">
<%= link_to '<div class="bottomMenu">Back</div>'.html_safe, 'javascript:history.go(-1);' %>
<% if @current_user.boss %>
  <%= link_to '<div class="bottomMenu">Edit</div>'.html_safe, edit_payslip_path(@payslip) %> 
<% end %>
</div>

<% if @payslip.jobs.present? %>
  <br>
  <p>Jobs Associated with time sheet</p>
  <table id="jobListing22">
    <thead>
      <tr>
        <th>Address</th>
        <th>Notes</th>
        <th>Link</th>
      </tr>
    </thead>

    <tbody>
      <% @payslip.jobs.each do |job| %>
        <tr id="jobjob">
          <td><%= job.address %></td>
          <td><%= job.notes %></td>

          <td><%= link_to 'Show', job %></td> 
          
        </tr>
      <% end %>
    </tbody>
  </table>

<% else %>


<p>No Jobs available</p>

<% end %>

