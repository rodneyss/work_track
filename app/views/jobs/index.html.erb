<p id="notice"><%= notice %></p>

<% if @current_user.boss %>
  <div id="bottomMenu">
    <%= link_to '<div class="bottomMenu">Back</div>'.html_safe, root_path %>
    <%= link_to '<div class="bottomMenu">New Job</div>'.html_safe, new_job_path %>
    <%= link_to '<div class="bottomMenu">Completed Jobs</div>'.html_safe, all_path %>
  </div>
<% end  %>


<% if @jobs.present? %>
  <p>Jobs to be completed</p>
  <table id="jobListing">
    <thead>
      <tr>
        <th>Address</th>
        <th>Notes</th>
        <th>Link</th>
      </tr>
    </thead>

    <tbody>
      <% @jobs.each do |job| %>
        <tr id="jobjob">
          <td><%= job.address %></td>
          <td><%= job.notes %></td>

          <td><%= link_to 'Show', job %></td> 
          
        </tr>
      <% end %>
    </tbody>
  </table>

<% else %>


<p>No Jobs available</p>

<% end %>


<br>


