<p id="notice"><%= notice %></p>


<div id="bottomMenu">
  <%= link_to '<div class="bottomMenu">New Client</div>'.html_safe, new_client_path %>

</div>

<table id="jobListing">
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.phone %></td>
        <td><%= link_to 'Show', client %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>



