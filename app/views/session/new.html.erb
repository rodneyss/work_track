

<h2 class="loginH2"> Please enter your login details </h2>

<%= form_tag '/login' do %>


  <div>
    <%= label_tag 'email', 'Email', :class => 'loginPage'%>
    <%= text_field_tag 'email' %>
  </div>

   <div>
    <%= label_tag 'password', 'Password', :class => 'loginPage'%>
    <%= password_field_tag 'password'%>
  </div>

  <br>
  <br>
  <div>
    <%= button_tag 'Login', :id => 'loginButton' %>
  </div>  



<% end %>
